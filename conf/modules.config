/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: params.publish_dir_mode,
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

	// -------- FILTER_LOWCONF chain (bcftools view) --------

  withName: BCFTOOLS_VIEW_BIALLELIC {
    // Keep only biallelic sites
    ext.args = '-m2 -M2'
    publishDir = [ path: "${params.outdir}/preprocess/core_filters", mode: 'copy' ]
  }

  withName: BCFTOOLS_VIEW_REFHOMO_EXCLUDE {
    // Exclude sites where all three samples are ref-homozygous (0/0 or 0|0)
    ext.args = "-e 'COUNT(GT=\"0/0\" || GT=\"0|0\")==3'"
    publishDir = [ path: "${params.outdir}/preprocess/core_filters", mode: 'copy' ]
  }

  withName: BCFTOOLS_VIEW_QUAL_MIN {
    // Enforce MIN(FMT/GQ) and MIN(FMT/DP) across trio
    ext.args = "-i 'MIN(FMT/GQ)>='${params.GQ_min}'' && MIN(FMT/DP)>='${params.DP_min}''"
    // If your Nextflow doesnâ€™t like nested quotes above, use the alternative:
    // ext.args = "-i MIN(FMT/GQ)>="+params.GQ_min+" && MIN(FMT/DP)>="+params.DP_min
    publishDir = [ path: "${params.outdir}/preprocess/core_filters", mode: 'copy' ]
  }

  withName: BCFTOOLS_VIEW_EXCL_CENTROMERES {
    // Exclude centromeres (BED). Falls back to conf/resources/<genome>/centromeres.bed if param not provided
    ext.args = "-T ^${ params.centromeres_bed ?: "conf/resources/${params.genomeBuild}/centromeres.bed" }"
    publishDir = [ path: "${params.outdir}/preprocess/region_filters", mode: 'copy' ]
  }

  withName: BCFTOOLS_VIEW_EXCL_SEGDUPS {
    // Exclude segmental duplications
    ext.args = "-T ^${ params.segdups_bed ?: "conf/resources/${params.genomeBuild}/segdups.bed" }"
    publishDir = [ path: "${params.outdir}/preprocess/region_filters", mode: 'copy' ]
  }

  withName: BCFTOOLS_VIEW_EXCL_HLAKIR {
    // Exclude HLA/KIR regions
    ext.args = "-T ^${ params.hla_kir_bed ?: "conf/resources/${params.genomeBuild}/hla_kir.bed" }"
    publishDir = [ path: "${params.outdir}/preprocess/region_filters", mode: 'copy' ]
  }

  withName: TABIX_INDEX {
    publishDir = [ path: "${params.outdir}/preprocess/final", mode: 'copy' ]
  }

}
